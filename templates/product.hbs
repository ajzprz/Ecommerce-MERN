<html>
  <head>
    <title>Doko Online Store</title>  
    <link rel="stylesheet" href="/public/css/details.css">
    <link rel="stylesheet" href="/public/css/index.css">
  </head>
  <body>
      {{> navbar}}
<section class="product">
	<div class="product__photo">
		<div class="photo-container">
			<div class="photo-main">
				<div class="controls">
					<i class="material-icons">&#8635;</i>
					<i class="material-icons">&#x2661;</i>
				</div>
				<img src="{{image}}" alt="green apple slice">
			</div>
			<div class="photo-album">
				<ul>
					<li><img src="{{image}}" alt="green apple"></li>
					<li><img src="{{image}}" alt="green apple"></li>
					<li><img src="{{image}}" alt="green apple"></li>
					<li><img src="{{image}}" alt="green apple"></li>
					
                    
				</ul>
			</div>
		</div>
	</div>
	<div class="product__info">
		<div class="title">
			<h1>{{this.title}}</h1>
			<span>Category: {{this.category}}</span>
		</div>
		<div class="price">
			R$ <span>{{this.price}}</span>
		</div>
		<div class="variant">
			<h3>SELECT A COLOR</h3>
			<ul>
				<li><img src="{{this.image}}" alt="green apple"></li>
				<li><img src="{{this.image}}" alt="green apple"></li>
				<li><img src="{{this.image}}" alt="green apple"></li>
				<li><img src="{{this.image}}" alt="green apple"></li>
			</ul>
		</div>
		<div class="description">
			<h3>Description</h3>
			<ul>
				<li>{{this.description}}</li>
				
			</ul>
		</div>
		<button class="buy--btn">ADD TO CART</button>
	</div>
</section>

{{>footer}}

</body>
</html>